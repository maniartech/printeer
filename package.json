{
  "name": "printeer",
  "version": "1.2.15",
  "description": "Prints specified web url to PDF (or Image - Coming Soon)!",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "repository": "git@github.com:maniartech/printeer.git",
  "author": "Mohamed Aamir Maniar <aamir.maniar@maniartech.com>",
  "license": "ISC",
  "type": "module",
  "bin": {
    "printeer": "./dist/bin/cli.js"
  },
  "scripts": {
    "esbuild": "esbuild",
    "clean": "rm -rf dist",
    "build:lib": "npm run esbuild -- ./src/index.ts --outfile=./dist/lib/index.js --bundle --platform=node --packages=external --target=node16.8 --format=esm --sourcemap",
  "build:cli": "npm run esbuild -- ./src/cli/index.ts --outfile=./dist/bin/cli.js --bundle --platform=node --packages=external --target=node16.8 --format=esm --sourcemap",
  "build:doctor": "npm run esbuild -- ./src/cli/index.ts --outfile=./dist/bin/cli.js --bundle --platform=node --packages=external --target=node16.8 --format=esm --sourcemap",
    "build:types": "tsc --project tsconfig.build.json",
    "build": "npm run clean && npm run build:lib && npm run build:cli && npm run build:types",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "tsc": "tsc",
  "doctor": "npm run build:doctor && node dist/bin/cli.js doctor",
  "printeer": "npm run build:cli && node dist/bin/cli.js"
  },
  "dependencies": {
    "puppeteer": "^19.5.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.0.0",
    "assert": "^2.0.0",
    "browserify-zlib": "^0.2.0",
    "constants-browserify": "^1.0.0",
    "esbuild": "^0.16.13",
    "eslint": "^8.0.0",
    "events": "^3.3.0",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "typescript": "^4.9.4",
    "url": "^0.11.0",
    "util": "^0.12.4",
    "vitest": "^1.0.0"
  }
}
