{
  "name": "printeer",
  "version": "1.2.15",
  "description": "Prints specified web url to PDF (or Image - Coming Soon)!",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "repository": "git@github.com:maniartech/printeer.git",
  "author": "Mohamed Aamir Maniar <aamir.maniar@maniartech.com>",
  "license": "ISC",
  "type": "module",
  "bin": {
    "printeer": "./dist/bin/cli.js"
  },
  "scripts": {
    "esbuild": "esbuild",
    "clean": "rm -rf dist",
    "build:lib": "npm run esbuild -- ./src/index.ts --outfile=./dist/lib/index.js --bundle --platform=node --packages=external --target=node16.8 --format=esm --sourcemap",
    "build:cli": "npm run esbuild -- ./src/cli/index.ts --outfile=./dist/bin/cli.js --bundle --platform=node --packages=external --target=node16.8 --format=esm --sourcemap",
    "build:cli:silent": "npm run esbuild -- ./src/cli/index.ts --outfile=./dist/bin/cli.js --bundle --platform=node --packages=external --target=node16.8 --format=esm --sourcemap --log-level=error",
    "build:types": "tsc --project tsconfig.build.json",
    "build": "npm run clean && npm run build:lib && npm run build:cli && npm run build:types",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/config tests/diagnostics tests/printing tests/resources tests/shared tests/browser-strategy.test.ts tests/batch-strategy.test.ts",
    "test:unit:watch": "vitest tests/config tests/diagnostics tests/printing tests/resources tests/shared tests/browser-strategy.test.ts tests/batch-strategy.test.ts --watch",
    "test:unit:coverage": "vitest run tests/config tests/diagnostics tests/printing tests/resources tests/shared tests/browser-strategy.test.ts tests/batch-strategy.test.ts --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "tsc": "tsc",
    "doctor": "node scripts/run-cli.js doctor",
    "printeer": "node scripts/run-cli.js",
    "test:cli": "vitest run tests/cli --reporter=verbose",
    "test:cli:watch": "vitest tests/cli --watch",
    "test:cli:coverage": "vitest run tests/cli --coverage",
    "test:browser": "node scripts/test-both-strategies.js",
    "test:browser:strategy": "vitest run tests/browser-*.test.ts tests/batch-strategy.test.ts"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "lodash-es": "^4.17.21",
    "puppeteer": "^19.5.2",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.0.0",
    "assert": "^2.0.0",
    "browserify-zlib": "^0.2.0",
    "constants-browserify": "^1.0.0",
    "esbuild": "^0.16.13",
    "eslint": "^8.0.0",
    "events": "^3.3.0",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "typescript": "^4.9.4",
    "url": "^0.11.0",
    "util": "^0.12.4",
    "vitest": "^1.0.0"
  }
}